<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".TeacherActivity">
    <ImageView
        android:id="@+id/anim_imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"


        android:src="@drawable/isomstric_teacher" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/btn_logout"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/set_exam"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:layout_above="@+id/btn_logout"
                android:background="@drawable/relativelayout_bg"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/test" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Set Closed Test" />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/set_open_questions"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_margin="10dp"
                android:layout_above="@+id/btn_logout"
                android:background="@drawable/relativelayout_bg"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imv7"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/open" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imv7"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Set Open Test" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/upload_exam"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_margin="10dp"
                android:layout_above="@+id/btn_logout"
                android:background="@drawable/relativelayout_bg"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imv3"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/upload_exam" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imv3"
                    android:layout_centerHorizontal="true"

                    android:fontFamily="@font/raleway_semibold"
                    android:text="Upload papers" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="12dp"
                android:id="@+id/view_exam"
                android:layout_marginRight="20dp"
                android:layout_above="@+id/btn_logout"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"

                android:background="@drawable/relativelayout_bg"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/exam"
                    android:id="@+id/imv9"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imv9"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"
                    android:text="View Results" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="12dp"
                android:id="@+id/mark_questions"
                android:layout_marginRight="20dp"
                android:layout_above="@+id/btn_logout"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/relativelayout_bg"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mark"
                    android:id="@+id/imv5"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imv5"
                    android:layout_centerHorizontal="true"
                  android:layout_marginTop="5dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"
                    android:text="Mark Questions" />



            </RelativeLayout>


        </LinearLayout>

    </HorizontalScrollView>






    <TextView
        android:id="@+id/tv_teachername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"


        android:fontFamily="@font/raleway_semibold"
        android:gravity="center"
        android:text=""
        android:textColor="#000"
        android:textSize="14dp"
        android:layout_alignParentRight="true" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toLeftOf="@+id/tv_teachername"
       android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway_medium"
        android:text="Hello : "
        android:layout_marginRight="5dp"
        android:textColor="#000"
        android:textSize="14dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:background="#707070"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#2f2e41"
        android:fontFamily="@font/raleway_semibold"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/blue" />

    <ImageView
        android:id="@+id/iv_announcement"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/announcement"
        android:layout_below="@id/view"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>